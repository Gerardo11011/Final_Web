extends layout.pug
block content
  form(method='POST', action='/edit/'+article.id)
    #form-group
      label titulo:
      input.form-control(name='titulo', type='text', value=article.titulos)
      br
    #form-group
      label tema:
      input.form-control(name='tema', type='text', value=article.tema)
      br
    #form-group
      label autor:
      input.form-control(name='autor', type='text', value=article.autor)
      br
    #form-group
      label cuerpo:
      textarea.form-control(name='cuerpo', type='text', value=article.cuerpo)
      br
    #form-group
      label bibliografia:
      input.form-control(name='bibliografia', type='text', value=article.bibliografia)
      br
    #form-group
      label id:
      input.form-control(name='id', type='text', value=article.id)
      br
    input.btn.btn-primary(type='submit', value='submit')
